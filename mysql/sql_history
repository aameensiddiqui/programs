SELECT * FROM test;
INSERT INTO test VALUES (CURDATE() + INTERVAL 2 DAY, CURTIME(), NOW());
SELECT * FROM test;
INSERT INTO test VALUES (CURDATE() - INTERVAL 2 DAY, CURTIME() - INTERVAL 23 SECOND, NOW());
SELECT * FROM test;
COMMIT;
CREATE TABLE products (pid INT, pname VARCHAR(20) UNIQUE, price INT);
SELECT * FROM products;
INSERT INTO products VALUES 
  (1, "jumbo chicken burger", 150), 
  (2, "mini chicken burger", 80), 
  (3, "mini veg buger", 70);
SELECT * FROM products;
-- The following insert will fail due to UNIQUE constraint on pname
