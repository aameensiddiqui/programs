SELECT * FROM pet;
SELECT name, species, birth FROM pet WHERE species = 'dog' OR species = 'cat';
SELECT * FROM pet ORDER BY birth;
SELECT name, birth FROM pet ORDER BY birth;
SELECT name, birth FROM pet ORDER BY name;
SELECT name, birth FROM pet ORDER BY sex;
SELECT name, birth, sex FROM pet ORDER BY sex;
SELECT name, birth FROM pet ORDER BY birth DESC;
SELECT name, birth FROM pet ORDER BY birth;
SELECT name, species, birth FROM pet ORDER BY species, birth DESC;
SELECT * FROM pet;
SELECT name, species, birth, CURDATE(), TIMESTAMPDIFF(YEAR, birth, CURDATE()) AS age FROM pet;
SELECT name, birth, CURDATE(), TIMESTAMPDIFF(YEAR, birth, CURDATE()) AS age FROM pet;
USE managerie;
SELECT * FROM pet;
SELECT name, birth, CURDATE(), TIMESTAMPDIFF(YEAR, birth, CURDATE()) AS age FROM pet;
SELECT name, birth, CURDATE(), TIMESTAMPDIFF(MONTH, birth, CURDATE()) AS age FROM pet;
SELECT name, birth, CURDATE(), TIMESTAMPDIFF(DAY, birth, CURDATE()) AS age FROM pet;
SELECT name, birth, CURDATE(), TIMESTAMPDIFF(DAY, birth, CURDATE()) AS age FROM pet ORDER BY name;
SELECT name, birth, CURDATE(), TIMESTAMPDIFF(YEAR, birth, CURDATE()) AS age FROM pet ORDER BY age;
SELECT * FROM pet;
SELECT name, species, birth, MONTH(birth) = 4 FROM pet;
SELECT name, species, birth FROM pet WHERE MONTH(birth) = 4;
SELECT name, species, birth FROM pet WHERE YEAR(birth) = 1998;
SELECT name, species, birth FROM pet WHERE MONTH(birth) = 11;
SELECT * FROM pet WHERE DAYOFMONTH(birth) = 4 AND MONTH(birth) = 2;
